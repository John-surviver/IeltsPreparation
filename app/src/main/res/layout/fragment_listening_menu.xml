<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Listening.ListeningMenu"
    android:background="@color/main_bg"
    android:orientation="vertical"
    android:gravity="center"
    >

    <LinearLayout
        android:id="@+id/listening_menu_lay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        >
        <!--Beginner Level-->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="90dp"
            app:cardElevation="10dp"
            app:cardCornerRadius="20dp"
            android:layout_margin="20dp"
            app:cardBackgroundColor="@color/white"
            app:cardMaxElevation="12dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="false"
            >
            <LinearLayout
                android:id="@+id/basic_listening_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ffcc99"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/basic_level"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textSize="30sp"
                    />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- levelintermediate level-->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="90dp"
            app:cardElevation="10dp"
            app:cardCornerRadius="20dp"
            android:layout_margin="20dp"
            app:cardBackgroundColor="@color/white"
            app:cardMaxElevation="12dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="false"
            >
            <LinearLayout
                android:id="@+id/intermediate_listening_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ffcc99"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/intermediate_level"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textSize="30sp"
                    />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!--Advanced Level-->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="90dp"
            app:cardElevation="10dp"
            app:cardCornerRadius="20dp"
            android:layout_margin="20dp"
            app:cardBackgroundColor="@color/white"
            app:cardMaxElevation="12dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="false"
            >
            <LinearLayout
                android:id="@+id/advanced_listening_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ffcc99"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/advance_level"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textSize="30sp"
                    />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <com.airbnb.lottie.LottieAnimationView
        android:visibility="gone"
        android:id="@+id/animationView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:lottie_rawRes="@raw/no_net"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"/>


</LinearLayout>